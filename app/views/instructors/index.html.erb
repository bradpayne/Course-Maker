<p id="notice"><%= notice %></p>

<h1>Listing Instructors</h1>
<table class="table table-bordered table-striped"> 


<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>First</th>
      <th>Middle</th>
      <th>Last</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td colspan="1"><%= instructor.first %></td>
        <td colspan="1"><%= instructor.last %></td>

        <td>           
          <%= link_to 'Edit', edit_instructor_path(instructor), :class => 'btn btn-mini btn-info' %>
          <%= link_to 'Destroy', instructor_path(instructor), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

