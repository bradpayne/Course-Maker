<h3>Search Results</h3>


<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th> <%= sortable "id" %> </th>
      <th> <%= sortable "code" %> </th>
      <th> <%= sortable "name" %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.code %></td>
        <td><%= course.name %></td>
        <td>           
          <%= link_to 'Show', course, :class => 'btn btn-mini btn-info' %>
          <%= link_to 'Enroll', enroll_path(course), :method => :post,  :class => 'btn btn-mini btn-danger' %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @courses %> 
