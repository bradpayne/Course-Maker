<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<div class="container">
  <div class="row">

    <div class="form-group">

    <%= form_tag search_path, :method => 'get', :id => "search_path" do %>

      <div class="col-md-8">
        <%= text_field_tag :search, params[:search], placeholder: "Search Key-Words", class: "btn btn-default" %>
      </div>
     </div>
    <% end %>
  </div>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th> <%= sortable "id" %> </th>
      <th> <%= sortable "code" %> </th>
      <th> <%= sortable "name" %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.code %></td>
        <td><%= course.name %></td>
        <td>           
          <%= link_to 'Show', course, :class => 'btn btn-mini btn-info' %>
          <%= link_to 'Enroll', enroll_path(course), :method => :post,  :class => 'btn btn-mini btn-danger' %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @events %> 

