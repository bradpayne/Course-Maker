<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<%if @courses.nil? || @courses.length == 0%>
	<p>No Matches Found</p>
<% else %>
	<table class="table table-bordered table-striped">
	  <thead>
	    <tr>
      <th> <%= "id" %> </th>
      <th> <%= "code" %> </th>
      <th> <%= "name" %> </th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @courses.each do |course| %>
	      <tr>
	        <td><%= course.id %></td>
	        <td><%= course.code %></td>
	        <td><%= course.name %></td>
	        <td>           
	          <%= link_to 'Show', course, :class => 'btn btn-mini btn-info' %>
	          <%= link_to 'Enroll', enroll_path(course), :method => :post,  :class => 'btn btn-mini btn-danger' %> 
	        </td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	<%= will_paginate @events %> 
<% end %>
